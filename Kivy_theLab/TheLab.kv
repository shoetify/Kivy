WidgetsExample:

<WidgetsExample>
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_state(self)
        size_hint: None, 1
        width: "100dp"

    Button:
        text: "Click here"
        on_press: root.on_button_click()
        disabled: not root.count_enable

    Label:
        text: root.my_text
        font_name: "fonts/svgafix.fon"
        font_size: "80dp"
        color: 1, 0.5, 1,1

    Switch:
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True

    Slider:
        min: 0
        max: 100
        value: 50
        on_value: root. on_slider_value(self)
        orientation: "vertical"
        disabled: not root.switch_enable

    Label:
        text: root.slider_value_txt

<PageLayoutExample@PageLayout>:
    GridLayoutExample
    AuchorLayoutExample


<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>
    # right-left top-bottom
    orientation: "rl-tb"

    # spacing of the four edge
    padding: ("20dp", "20dp", "20dp", "20dp")

<GridLayoutExample>
    # rows
    # determine how many rows of the panel
    # cols
    # determine how many columns of the panel

    rows: 2

    Button:
        text: "A"
        size_hint: 0.4, 1
    Button:
        text: "B"
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: 0.4, 1
    Button:
        text: "E"
    Button:
        text: "F"


<AuchorLayoutExample>
    # right, left, center
    anchor_x: "right"
    # bottom, top, center
    anchor_y: "center"

    Button:
        text: "A"
        size_hint: .1, .1

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "A"
        # determine the relative size of the button
        size_hint: .8, .5
        # (width), (height) can be smaller or larger than 1

        # determine the position of the button
        pos_hint: { "center_x": .5 }
        # 1st parameter can be : "x", "center_x", "right" for width
        #                        "y", "center_y", "top" for height
        # represent starting from left, center or right of the button
        # 2nd parameter is the relative position of the button:
        #   from 0 to 1 represent from left to right of the app

    Button:
        text: "B"
        # determine the fixed size of the button
        size_hint: None, None
        width: "100dp"
        height: "40dp"
        # determine the exact width and height of the button

    BoxLayout:
        orientation: "horizontal"
        spacing: "10dp"
        Label:
            text: "C1"
        Label:
            text: "C2"
        Label:
            text: "C3"
        Label:
            text: "C4"